/**index.wxss**/
.container {
  height: 1500rpx;
}

.container .search {
  height: 65rpx;
  padding: 12rpx 0rpx 12rpx 0rpx;
  background: #2a8ce5;
}

.container .search-left {
  flex: 8;
  background: #4ea3e7;
  text-align: left;
}

.container .search-left image {
  display: inline-block;
  width: 35rpx;
  height: 35rpx;
  padding: 15rpx 15rpx 15rpx 15rpx;
  background: green;
  margin-left: 10rpx;
  vertical-align: top;
}

.container .search-left input {
  display: inline-block; /*不让input独占一行*/
  overflow: hidden;
  height: 65rpx;
  font-size: 26rpx;
  background: red;
 /* vertical-align: top; 垂直对齐方式*/
}

.search-placeholder {
  color: #8ccefd;
  line-height: 10rpx;
}

.container .search .search-right {
  flex: 1;
}

.container .search .search-right image {
  width: 45rpx;
  height: 45rpx;
  padding: 10rpx;
  background: black;
}


